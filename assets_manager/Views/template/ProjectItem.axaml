<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
        xmlns:controls="using:assets_manager.Views.template">
  <Design.PreviewWith>
    <controls:ProjectItem />
  </Design.PreviewWith>

  <Style Selector="controls|ProjectItem">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
        <StackPanel>
          <Image Name="ItemShowImage" Width="200" Height="200" Stretch="Uniform" asyncImageLoader:ImageLoader.Source="https://i0.hdslb.com/bfs/face/29e6a4c931c1cf9963764b49a8ccabf61511e6d6.jpg@150w_150h.jpg" />
          <Label HorizontalContentAlignment="Center" Content="{TemplateBinding ProjectName}"></Label>
        </StackPanel>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
