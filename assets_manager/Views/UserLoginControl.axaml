<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             x:Class="assets_manager.Views.UserLoginControl">
  

  <Grid RowDefinitions="*">
      <Border Background="#222" CornerRadius="12">
        <StackPanel Spacing="12">
          <TextBlock TextAlignment="Center" FontSize="35" Margin="10">APM</TextBlock>
          <TextBlock TextAlignment="Center" FontSize="30">User login</TextBlock>
        <TextBox Name="LoginUserName" Text="{Binding UserName, Mode=TwoWay}" Watermark="User name" Width="360" Height="40" VerticalContentAlignment="Center"></TextBox>
        <TextBox Name="UserPassword" Text="{Binding Password, Mode=TwoWay}" PasswordChar="â€¢" Watermark="password" Width="360" Height="40" VerticalContentAlignment="Center"></TextBox>
        <CheckBox Margin="22,0,0,0" IsChecked="{Binding IsRemember}">Is remember</CheckBox>
        <Button HorizontalAlignment="Center" Command="{Binding LoginCommand}" Width="180" Height="40" FontSize="25">Login</Button>
        <TextBlock HorizontalAlignment="Right" Margin="0,40,20,0">version 0.0.1</TextBlock>
      </StackPanel>
      </Border>
  </Grid>

</UserControl>
